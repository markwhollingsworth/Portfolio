@page "/inventory"
@inject IPortfolioService PortfolioService
@inject IConfiguration Configuration
@namespace Portfolio.UI.Pages

<div class="container my-3 fs-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Inventory</li>
        </ol>
    </nav>
</div>

@if (Items == null)
{
    <div class="container">
        <div class="row">
            <div id="global-loader">
                <div class="whirly-loader"></div>
            </div>
        </div>
    </div>
}
else if (!Items.Any())
{
    <div class="container">
        <div class="row">
            <p>No inventory</p>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-11 col-md-9 col-sm-7 mx-auto">
                <div class="card border border-primary">
                    <div class="card-body">
                        <h5 class="card-title">Current inventory</h5>
                        <div class="table-responsive">
                            <table class="table datanew dataTable no-footer">
                                <tbody>
                                    <tr>
                                        <th class="sorting_asc">Description</th>
                                        <th class="sorting_asc">List Price</th>
                                        <th class="sorting_asc">Quantity</th>
                                    </tr>
                                    @foreach (var item in Items)
                                    {
                                        <tr role="row" @key="item.Id">
                                            <td><NavLink href="@GetItemLink(item.Id)">@item.Description</NavLink></td>
                                            <td>@item.ListPrice.ToString("C2")</td>
                                            <td>@item.Quantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}