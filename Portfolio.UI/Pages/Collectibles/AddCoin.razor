@page "/coin/add"
@inject IHttpClientFactory ClientFactory
@inject IConfiguration Configuration
@namespace Portfolio.UI.Pages.Collectibles

@if (!IsLoadingComplete)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-11 col-md-9 col-sm-7 mx-auto">
                <div id="global-loader">
                    <div class="whirly-loader"></div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @if (IsAddCoinSuccessful)
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-11 col-md-9 col-sm-7 mx-auto">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> @AddCoinMessage
                        <NavLink href="/inventory">Return to inventory</NavLink>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container">
        <div class="row">
            <div class="col-lg-11 col-md-9 col-sm-7 mx-auto">
                <div class="card border border-primary">
                    <div class="card-body">
                        <h5 class="card-title">Add coin</h5>
                        <EditForm Model="@AddCoinRequest" OnValidSubmit="@SaveCoin">
                            <div class="row">
                                <div class="col-lg-4">
                                    <DataAnnotationsValidator />
                                    <div class="validation">
                                        <ValidationSummary />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <fieldset>
                                            <label for="year" class="required-field">
                                                Year
                                            </label>
                                            <InputText id="year" @bind-Value="AddCoinRequest.Year" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))"></InputText>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <fieldset>
                                            <label for="mintMark" class="required-field">
                                                Mint Mark
                                            </label>
                                            <InputSelect @bind-Value="AddCoinRequest.MintId" id="mintMark" class="select">
                                                <option value="0">Choose...</option>
                                                @foreach (var mint in Mints)
                                                {
                                                    <option value="@mint.Id">@mint.Name (@mint.Abbreviation)</option>
                                                }
                                            </InputSelect>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <fieldset>
                                            <label for="denomination" class="required-field">
                                                Denomination
                                            </label>
                                            <InputSelect @bind-Value="AddCoinRequest.DenominationId" id="denomination" class="select">
                                                <option value="0">Choose...</option>
                                                @foreach (var denomination in Denominations)
                                                {
                                                    <option value="@denomination.Id">@denomination.Description</option>
                                                }
                                            </InputSelect>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <fieldset>
                                            <label for="quantity" class="required-field">
                                                Quantity
                                            </label>
                                            <InputText id="quantity" @bind-Value="AddCoinRequest.Quantity" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))"></InputText>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <button class="btn btn-submit me-2" type="submit">Add coin</button>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
}