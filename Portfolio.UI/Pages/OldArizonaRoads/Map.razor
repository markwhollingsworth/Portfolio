@page "/map/{Id:int}"
@namespace Portfolio.UI.Pages.OldArizonaRoads

<div class="container my-3 fs-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/map/search">Map search</a></li>
            <li class="breadcrumb-item">Map detail</li>
        </ol>
    </nav>
</div>

@if (Id <= 0)
{
    <div class="container">
        <div class="row">
            <p>Map id is invalid.</p>
        </div>
    </div>
}
else if (MapDetail == null)
{
    <div class="container">
        <div class="row">
            <div id="global-loader">
                <div class="whirly-loader"></div>
            </div>
        </div>
    </div>
}
else if (string.IsNullOrWhiteSpace(MapDetail.Url))
{
    <div class="container">
        <div class="row">
            <p>Map url is invalid.</p>
        </div>
    </div>
}
else
{
    <MapComponent Map="@MapDetail"></MapComponent>
}