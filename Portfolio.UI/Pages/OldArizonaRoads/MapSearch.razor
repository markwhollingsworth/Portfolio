@page "/map/search"
@inject IConfiguration Configuration
@namespace Portfolio.UI.Pages.OldArizonaRoads

<PageTitle>Old Arizona Roads | Map Search</PageTitle>

<div class="text-center bg-blue-100">
    <input class="border-4 w-1/3 rounded m-6 p-6 h-8 border-blue-300"
           @bind-value="SearchText"
           @bind-value:event="oninput"
           placeholder="Search for maps" />
</div>

@if (!Maps.Any())
{
    <div class="container">
        <div class="row">
            <div id="global-loader">
                <div class="whirly-loader"></div>
            </div>
        </div>
    </div>
}
else if (!string.IsNullOrWhiteSpace(SearchText) && FilteredMaps.Any())
{
    <div class="p-2 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3">
        @foreach (var map in FilteredMaps)
        {
            <NavLink class="nav-link" href="@GetMapLink(map.Id)">
                @map.MapDescription
            </NavLink>
        }
    </div>
}
