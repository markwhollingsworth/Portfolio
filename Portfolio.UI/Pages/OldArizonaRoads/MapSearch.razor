@page "/map/search"
@namespace Portfolio.UI.Pages.OldArizonaRoads
@inject IConfiguration Configuration

@if (Maps == null || !Maps.Any())
{
    <div class="container">
        <div class="row">
            <div id="global-loader">
                <div class="whirly-loader"></div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <h3>Map search</h3>
        <div class="table-top">
            <div class="search-set text-center">
                <div class="search-path">
                    <div class="search-input">
                        <label>
                            <input type="search" class="form-control form-control-lg" placeholder="Search..."
                               aria-controls="DataTables_Table_0" @bind-value="SearchText" @bind-value:event="oninput">
                        </label>
                        <a class="btn btn-searchset"><img src="img/icons/search-white.svg" alt="img"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrWhiteSpace(SearchText))
{
    @if (FilteredMaps?.Any() ?? false)
    {
        <div class="container">
            <div class="row table-responsive-md">
                <table class="table table-striped table-bordered">
                    <caption>List of maps</caption>
                    <thead>
                        <tr>
                            <th scope="col">Month</th>
                            <th scope="col">Year</th>
                            <th scope="col">State</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var map in FilteredMaps)
                        {
                            <tr>
                                <td>@map.Month</td>
                                <td>@map.Year</td>
                                <td>@map.State</td>
                                <td>@map.Description</td>
                                <td>
                                    <a href="@GetMapLink(map.Id)" class="link-primary">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-12">
                    There were no maps found.
                </div>
            </div>
        </div>
    }
}
