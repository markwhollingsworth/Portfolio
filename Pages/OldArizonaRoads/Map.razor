@page "/map/{Id:int}"
@inject IConfiguration Configuration
@namespace Portfolio.UI.Pages.OldArizonaRoads

<NavLink class="nav-link" href="/map/search">
    Return to map search
</NavLink>

@if (Id <= 0)
{
    <p>Map id is invalid.</p>
}
else if (MapDetail == null)
{
    <p>Unable to find map.</p>
}
else if (string.IsNullOrWhiteSpace(MapDetail.Url))
{
    <p>Map url is invalid.</p>
}
else if (string.IsNullOrWhiteSpace(MapDetail.Description))
{
    <p>Map description is invalid.</p>
}
else
{
    <MapComponent MapUrl="@MapDetail.Url" PageTitle="@MapDetail.Description"></MapComponent>
}