@page "/"

<PageTitle>Collectibles Portfolio</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Hero Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Welcome to Your Collectibles Portfolio</h1>
